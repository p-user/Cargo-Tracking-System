{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "KestrelEndpoints": {
    "Http": {
      "Port": "5004"
    },
    "Https": {
      "Port": "5054"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "trackingApiRoute": {
        "ClusterId": "trackingApiCluster",
        "Order": 2,
        "Match": {
          "Path": "/tracking/{**catch-all}"
        },
        "Transforms": [ 
          { "PathRemovePrefix": "/tracking" }
        ]
      },
      "trackingSwaggerRoute": {
        "ClusterId": "trackingApiCluster",
        "Order": 1,
        "Match": {
          "Path": "/tracking/swagger/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "swagger/{**catch-all}" }
        ]
      },

      "orderApiRoute": {
        "ClusterId": "orderApiCluster",
        "Order": 2,
        "Match": {
          "Path": "/order/{**catch-all}"
        }
      },
      "orderSwaggerRoute": {
        "ClusterId": "orderApiCluster",
        "Order": 1,
        "Match": {
          "Path": "/order/swagger/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/order" }
        ]
      },
      "routingApiRoute": {
        "ClusterId": "routingApiCluster",
        "Order": 2,
        "Match": {
          "Path": "/routing/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/routing" }
        ]
      },
      "routingSwaggerRoute": {
        "ClusterId": "routingApiCluster",
        "Order": 1,
        "Match": {
          "Path": "/routing/swagger/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/routing" }
        ]
      }
    },
    "Clusters": {
      "trackingApiCluster": {
        "Destinations": {
          "trackingApi": {
            "Address": "http://localhost:5003/"
          }
        },
        "HttpClient": {
          "SslProtocols": [ "Tls12", "Tls13" ],
          "DangerousAcceptAnyServerCertificate": true
        }
      },
      "routingApiCluster": {
        "Destinations": {
          "routingApi": {
            "Address": "http://localhost:5002/"
          }
        },
        "HttpClient": {
          "SslProtocols": [ "Tls12", "Tls13" ],
          "DangerousAcceptAnyServerCertificate": true
        }
      },
      "orderApiCluster": {
        "Destinations": {
          "orderApi": {
            "Address": "http://localhost:5000/"
          }
        },
        "HttpClient": {
          "SslProtocols": [ "Tls12", "Tls13" ],
          "DangerousAcceptAnyServerCertificate": true
        }
      }
    }
  }
}